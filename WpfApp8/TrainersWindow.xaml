<Window x:Class="WpfApp8.TrainersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8"
        mc:Ignorable="d"
        Title="TrainersWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="TrainersGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding trainer_id}"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding name}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
